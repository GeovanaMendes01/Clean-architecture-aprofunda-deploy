{
  "compilerOptions": {
    "outDir": "./dist", 
    "rootDir": "./src",  
    "removeComments": true,
    "target": "es2016",
    "module": "CommonJs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "tests"]
}

